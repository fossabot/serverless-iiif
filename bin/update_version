#!/usr/bin/env bash

root=$(dirname $0)/..
version=$1
if [[ -z $version ]]; then
  echo "Usage: $(basename $0) NEW_VERSION"
  exit 1
fi

for f in $root/package.json $root/src/package.json $root/dependencies/package.json; do
  content=$(cat $f)
  jq --arg v "$version" '.version = $v' <<< $content > $f
done

if [[ "$OSTYPE" = "darwin*" ]]; then
  sed -i '' -E "s/SemanticVersion: .+/SemanticVersion: $version/" $root/sam/template.yml
else
  sed -i'' -E "s/SemanticVersion: .+/SemanticVersion: $version/" $root/sam/template.yml
fi
